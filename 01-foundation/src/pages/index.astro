---
import MainLayouts from "../layouts/MainLayouts.astro";

// server only
const name 	= "Sergio Elias Arce Rold√°n";
const title = "Home Page";
---
<MainLayouts title="Home Page">
	<body>
		<h1>Astro {title}</h1>
		<h1>{name}</h1>
		<p id="moment"> Momento actual: { new Date().toLocaleTimeString() } </p>
		<script>
			const actualMoment: string = new Date().toLocaleTimeString();
			const paragraph = document.getElementById("moment") as HTMLElement;
			paragraph.innerText = `Momento Actual : ${ actualMoment }`;
			</script>
	<script>
		const currentYear: number = new Date().getFullYear();
		
		const footer = document.querySelector('footer') as HTMLElement;
		footer.innerText = `Current Year: ${currentYear}`;
	</script>
	</body>
</MainLayouts>